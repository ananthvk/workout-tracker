{
    "type": "module",
    "name": "backend",
    "version": "1.0.0",
    "description": "This project was bootstrapped with Fastify-CLI.",
    "main": "app.ts",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "test": "NODE_ENV=test FASTIFY_AUTOLOAD_TYPESCRIPT=1 tap run --node-arg=\"--no-deprecation\"",
        "start": "pnpm run build:ts && fastify start -o -l info dist/app.js",
        "build:ts": "tsc",
        "watch:ts": "tsc -w",
        "dev": "pnpm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch:ts\" \"pnpm:dev:start\"",
        "dev:start": "fastify start -o --ignore-watch=.ts$ -w -l info -P dist/app.js",
        "prod": "NODE_ENV=production fastify start -o -l info dist/app.js",
        "precommit": "pnpm eslint src && pnpm test",
        "prepare": "cd .. && husky backend/.husky"

    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/auth": "^4.6.1",
        "@fastify/autoload": "^5.0.0",
        "@fastify/bearer-auth": "^9.4.0",
        "@fastify/jwt": "^8.0.1",
        "@fastify/one-line-logger": "^1.3.0",
        "@fastify/postgres": "^5.2.2",
        "@fastify/sensible": "^5.0.0",
        "@fastify/swagger": "^8.14.0",
        "@fastify/swagger-ui": "^3.0.0",
        "@zxcvbn-ts/core": "^3.0.4",
        "@zxcvbn-ts/language-common": "^3.0.4",
        "@zxcvbn-ts/language-en": "^3.0.2",
        "bcryptjs": "^2.4.3",
        "fastify": "^4.26.1",
        "fastify-cli": "^6.1.1",
        "fastify-plugin": "^4.0.0",
        "validator": "^13.12.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.3.0",
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/node": "^20.12.12",
        "@types/pg": "^8.11.6",
        "@types/validator": "^13.11.10",
        "c8": "^9.0.0",
        "concurrently": "^8.2.2",
        "eslint": "^9.3.0",
        "fastify-tsconfig": "^2.0.0",
        "husky": "^9.0.11",
        "tap": "^18.8.0",
        "ts-node": "^10.4.0",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.9.0"
    },
    "packageManager": "pnpm@8.15.1"
}